    },
    {
        image: "/unified-data-cloud-image.jpg",
        title: "Unified Data Cloud for Simplicity and Intelligence at Scale",
        text: "A new decision point in data architecture has led industry leaders to choose Google's data cloud to accelerate digital transformation. Dig in further to see...",
        href: "https://cloud.google.com/resources/idc-datacloud-study?hl=en"
    },
    {
        image: "/executive-guide-image.jpg",
        title: "The Executiveâ€™s Guide to Generative AI",
        text: "Right now, only 15% of business and IT decision makers feel they have expert knowledge in the area of Generative AI. This comprehensive guide will...",
        href: "https://inthecloud.withgoogle.com/executive-guide-getting-started-with-generative-ai/dl-cd.html?_ga=2.252977801.-1669785295.1710939471&_gac=1.194250207.1712246871.CjwKCAjwte-vBhBFEiwAQSv_xbsOfgF5cfC1Q6GCUBy1ZjzWEzq1mns2fQndDCAtDKkkxD5sXlhVCRoCEw8QAvD_BwE&_gl=1*bf704e*_ga*MTY2OTc4NTI5NS4xNzEwOTM5NDcx*_ga_WH2QY8WWF5*MTcxNDE1NDY4Mi4xMi4xLjE3MTQxNjA4NjEuMC4wLjA."
    }
];
---

<section class="card-section">
    <div class="wrapper">
        <div class="cards">
            {cards.map((card) => (
                    <Card href={card.href} image={card.image} title={card.title} text={card.text}/>
            ))}
        </div>
    </div>
</section>
<style lang="scss">

  .card-section {
    padding-left: 40px;
    padding-right: 40px;
    margin-bottom: 100px;

    @media screen and (max-width: 768px) {
      padding-left: 30px;
      padding-right: 30px;
      margin-bottom: 60px;
    }
  }

  .wrapper {
    width: 100%;
    max-width: 1240px;
    margin: 0 auto;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;

    @media screen and (max-width: 992px) {
      grid-template-columns: repeat(2, 1fr);
    }
    @media screen and (max-width: 576px) {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>