---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
    <div class="wrapper">
        <div class="footer-images">
            <figure><img src="/logo-itc.svg" alt="ITC logo"></figure>
            <figure><img src="/logo-google.svg" alt="Google logo"></figure>
        </div>
        <div class="footer-links">
            <a href="#">Google Privacy Policy and Terms</a>
            <svg width="2" height="16" viewBox="0 0 2 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 0V16" stroke="#53575C"/>
            </svg>
            <a href="#">ITCurated Privacy Policy</a>
        </div>
        <div class="footer-copy">&copy; {currentYear}, All rights reserved</div>
    </div>
</footer>

<style lang="scss">
  .footer {
    padding-left: 40px;
    padding-right: 40px;

    .wrapper {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      max-width: 1240px;
      padding: 40px 0;
      margin: 0 auto;

      @media screen and (max-width: 992px) {
        justify-content: center;
      }
    }

    &-images {
      display: flex;
      align-items: center;
      gap: 32px;
      margin-right: auto;

      @media screen and (max-width: 992px) {
        justify-content: center;
        flex-basis: 100%;
        margin-bottom: 30px;
      }

      figure {
        img {
          display: block;
          max-width: 100%;
          height: auto;
        }
      }
    }

    &-links {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 20px;
      margin-right: 20px;

      @media screen and (max-width: 992px) {
        text-align: center;
        margin-bottom: 30px;

        svg {
          display: none;
        }
      }

      a {
        font-family: var(--second-family);
        font-weight: 400;
        font-size: 14px;
        line-height: 114%;
        text-decoration: underline;
        text-decoration-skip-ink: none;
        color: var(--mid-grey);

        @media screen and (max-width: 576px) {
          flex-basis: 100%;
        }
      }
    }

    &-copy {
      font-family: var(--font-family);
      font-weight: 400;
      font-size: 14px;
      line-height: 114%;
      color: var(--mid-grey);

      @media screen and (max-width: 992px) {
        text-align: center;
        flex-basis: 100%;
      }
    }
  }
</style>