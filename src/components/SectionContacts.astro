---
interface Props {
    title: string;
    subtitle: string;
    btnLink: string;
    btnText: string;
    videoImg: string;
    videoUrl: string;
}

const {title, subtitle, btnLink, btnText, videoImg, videoUrl} = Astro.props;
---

<section class="section-contacts">
    <div class="wrapper">
        <div class="content">
            <h2>
                <Fragment set:html={title}/>
            </h2>
            {subtitle && <p>{subtitle}</p>}
            <a href={btnLink}>{btnText}</a>
        </div>
        <figure>
            <video autoplay loop muted poster={videoImg}>
                <source src={videoUrl} type="video/mp4">
            </video>
        </figure>
    </div>
</section>

<style lang="scss">
  .section-contacts {
    padding-left: 40px;
    padding-right: 40px;

    &:not(:last-child) {
      margin-bottom: 100px;
    }
  }

  .wrapper {
    box-sizing: unset;
    background-color: #c1cdd3;
    border-radius: 10px;
    display: flex;
    align-items: center;
    width: 100%;
    max-width: 1560px;
    min-height: 386px;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
  }

  .content {
    width: 100%;
    max-width: 1240px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  h2 {
    font-family: var(--font-family);
    font-weight: 700;
    font-size: 46px;
    line-height: 109%;
    color: #555;
    max-width: 673px;
    margin-top: unset;
    margin-bottom: unset;
  }

  p {
    font-family: var(--font-family);
    font-weight: 500;
    font-size: 24px;
    line-height: 208%;
    color: #555;
    margin-top: 6px;
    margin-bottom: unset;
  }

  a {
    font-family: var(--font-family);
    font-weight: 700;
    font-size: 20px;
    line-height: 155%;
    text-align: center;
    text-decoration: none;
    color: white;
    background-color: var(--blue);
    border-radius: 4px;
    display: inline-block;
    padding: 10px 20px;
    margin-top: 40px;
  }

  figure {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;

    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>