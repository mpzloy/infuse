---
import Layout from '../layouts/Layout.astro';
import FirstScreen from "../components/FirstScreen.astro";
import CardSection from "../components/CardSection.astro";
import SectionContacts from "../components/SectionContacts.astro";
import Slider from "../components/Slider.astro";

const cards = [
    {
        image: "/modernise-applications-image.jpg",
        title: "Modernise Applications with Open-Source Software on Google Cloud",
        text: "Digital transformation is a priority for organisations looking to become more agile. This means replacing older technology stacks with cloud and open-source technologies...",
        href: "https://itcurated.com/Solving-For-Innovation/infrastructure-and-application-modernisation/modernize-applications-with-open-source-software-on-google-cloud/"
    },
    {
        image: "/unified-data-cloud-image.jpg",
        title: "Unified Data Cloud for Simplicity and Intelligence at Scale",
        text: "A new decision point in data architecture has led industry leaders to choose Google's data cloud to accelerate digital transformation. Dig in further to see...",
        href: "https://cloud.google.com/resources/idc-datacloud-study?hl=en"
    },
    {
        image: "/executive-guide-image.jpg",
        title: "The Executiveâ€™s Guide to Generative AI",
        text: "Right now, only 15% of business and IT decision makers feel they have expert knowledge in the area of Generative AI. This comprehensive guide will...",
        href: "https://inthecloud.withgoogle.com/executive-guide-getting-started-with-generative-ai/dl-cd.html?_ga=2.252977801.-1669785295.1710939471&_gac=1.194250207.1712246871.CjwKCAjwte-vBhBFEiwAQSv_xbsOfgF5cfC1Q6GCUBy1ZjzWEzq1mns2fQndDCAtDKkkxD5sXlhVCRoCEw8QAvD_BwE&_gl=1*bf704e*_ga*MTY2OTc4NTI5NS4xNzEwOTM5NDcx*_ga_WH2QY8WWF5*MTcxNDE1NDY4Mi4xMi4xLjE3MTQxNjA4NjEuMC4wLjA."
    }
];
---

<Layout title="Solving for Innovation">
    <main class="main">
        <FirstScreen/>
        <CardSection/>
        <SectionContacts
                title="We empower you with the best cloud solutions for your needs"
                btnText="Contact sales"
                btnLink="#"
                videoUrl="/cloud-solution-1.mp4"
                videoImg="/cloud-solution-image-1.jpg"
        />
        <section class="a">
            <aside>
                <div class="sidebar"></div>
                <div class="sidebar s"></div>
            </aside>
            <div class="content">
                <Slider glideClass="glide1" slides={cards}/>
                <Slider glideClass="glide2" slides={cards}/>
            </div>
        </section>


        <SectionContacts
                title="Find the best cloud solutions for your needs"
                subtitle="Identify the right solutions to exceed your goals"
                btnText="Contact sales"
                btnLink="#"
                videoUrl="/cloud-solution-2.mp4"
                videoImg="/cloud-solution-image-1.jpg"
        />
    </main>
</Layout>

<style lang="scss">
  .a {
    display: flex;

    aside {
      width: 320px;
    }

    .sidebar {
      min-height: 513px;
      background-color: #434;
      margin-bottom: 20px;
      position: sticky;
      top: 50px;
    }

    .s {
      background-color: #484;
      top: 60px;
    }

    .content {
      width: calc(100% - 320px);
      min-height: 1500px;
    }
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>

